<UserControl x:Class="LudoHive.Telas.Controles.LabelCRUD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas.Controles"
             mc:Ignorable="d" MinHeight="30" MaxHeight="100" Height="40" Width="500" Loaded="LabelCRUD_Load">
    <Grid x:Name="gdLabelCRUD" Background="#FF868686">
        <local:ImgOnline x:Name="picIconLabel" Height="38" HorizontalAlignment="Left" TamanhoImg="38,38" Arredondado="7" />
        <Label x:Name="lblNomeElemento" Content="Nome Elemento" Margin="38,0,123,0" VerticalContentAlignment="Center" FontSize="16"/>
        <local:ImgOnline x:Name="picExpLabel" HorizontalAlignment="Right" TamanhoImg="38,38" Arredondado="7"/>
        <local:ImgOnline x:Name="picDelLabel" HorizontalAlignment="Right" Margin="0,0,40,0" TamanhoImg="38,38" Arredondado="7"/>
        <local:ImgOnline x:Name="picEditLabel" HorizontalAlignment="Right" Margin="0,0,80,0" TamanhoImg="38,38" Arredondado="7"/>
    </Grid>
</UserControl>
