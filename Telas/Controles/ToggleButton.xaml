<UserControl x:Class="LudoHive.Telas.Controles.ToggleButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="100">
    <Grid>
        <Rectangle x:Name="tgbtnBackgroundBorder" Fill="#FF962C2C"/>
        <Rectangle x:Name="tgbtnBackground" Fill="#FF96612C" Margin="1,1,1,1"/>
        <Rectangle x:Name="tgbtnCircle" HorizontalAlignment="Left" Margin="1,1,0,1" Width="{Binding Height, RelativeSource={RelativeSource Self}}" Fill="#FF2C4696" Height="23"/>
    </Grid>
</UserControl>
