<UserControl x:Class="LudoHive.Telas.Controles.Ordenar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="442">
    <Grid x:Name="gdOrdenar" Background="#FFB5B5B5">
        <Label x:Name="lblElementoPai" Content="Elemento Pai" VerticalAlignment="Top" Height="34" Width="442" Background="#FF6D6D6D" FontSize="20" FontWeight="Bold" Padding="10,0,0,0" ScrollViewer.CanContentScroll="True" VerticalContentAlignment="Center"/>
        <Grid x:Name="gdOrdem" Margin="0,34,0,0">
            <local:LabelCRUD HorizontalAlignment="Left" Margin="40,0,0,0" VerticalAlignment="Top" Width="402" Height="40" WithEdit="False" WithExpand="False"/>
            <local:ImgOnline HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" TamanhoImg="40,40" Arredondado="-1"/>
        </Grid>
        <Button x:Name="btnRedefinir" Content="Redefinir" HorizontalAlignment="Right" Margin="0,0,10,10" VerticalAlignment="Bottom" Width="80" Height="35" BorderBrush="Black"/>
        <Button x:Name="btnSalvar" Content="Salvar" HorizontalAlignment="Right" Margin="0,0,100,10" VerticalAlignment="Bottom" Width="80" Height="35" BorderBrush="Black"/>
    </Grid>
</UserControl>
