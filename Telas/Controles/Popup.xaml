<UserControl x:Class="LudoHive.Telas.Controles.Popup"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas.Controles"
             mc:Ignorable="d" 
             d:DesignHeight="112" d:DesignWidth="300" Width="300" Height="112" Loaded="PopupLoad">
    <Grid>
        <StackPanel x:Name="flwPopup" Background="#FFC7C7C7">
            <Grid x:Name="gdOpcao" Height="50" Background="#FFC71818" Margin="0,3,0,3">
                <Image x:Name="picIconOpcao" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50"/>
                <Label x:Name="lblOpcao" Content="Label" Margin="50,0,0,0" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
            </Grid>
            <Grid x:Name="gdOpcao1" Height="50" Background="#FF3B58A2" Margin="0,3,0,3">
                <Image x:Name="picIconOpcao1" HorizontalAlignment="Left" Height="50" VerticalAlignment="Top" Width="50"/>
                <Label x:Name="lblOpcao1" Content="Label" Margin="50,0,0,0" VerticalAlignment="Center" FontSize="18" FontWeight="Bold"/>
            </Grid>
        </StackPanel>

    </Grid>
</UserControl>
