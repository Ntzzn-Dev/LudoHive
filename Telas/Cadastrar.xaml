<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas"
             xmlns:Controles="clr-namespace:LudoHive.Telas.Controles" x:Class="LudoHive.Telas.Cadastrar"
             mc:Ignorable="d" 
             d:DesignHeight="690" d:DesignWidth="694" HorizontalAlignment="Left" VerticalAlignment="Top" Width="694" Height="690">
    <Grid Background="#FF2C2C2C">
        <Rectangle Height="49" Stroke="#FF151617" VerticalAlignment="Top" Fill="#FF151617"/>
        <Label x:Name="lblNomeAtalho_Copiar" Content="LudoHive - Cadastro" Margin="10,6,0,0" VerticalAlignment="Top" Foreground="Silver" FontSize="25" HorizontalAlignment="Left" FontFamily="Segoe UI Black"/>
        <Rectangle Stroke="#FF1B1C1D" Fill="#FF1B1C1D" Margin="0,49,0,0" Height="34" VerticalAlignment="Top"/>
        <Button x:Name="btnPageAtalho" Content="Atalho" HorizontalAlignment="Left" Margin="22,51,0,0" VerticalAlignment="Top" Background="#FF2C2C2C" BorderBrush="#FF2C2C2C" Height="30" Width="102" Foreground="Silver">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnPageApp" Content="Aplicativo" HorizontalAlignment="Left" Margin="140,51,0,0" VerticalAlignment="Top" Background="#FF2C2C2C" BorderBrush="#FF2C2C2C" Height="30" Width="102" Foreground="Silver">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Grid x:Name="gdPage1">
            <Controles:TextboxCustom x:Name="txtbxNomeAtalho" Margin="21,110,221,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblNomeAtalho" Content="Nome do Atalho" Margin="22,83,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxCaminhoAtalho" Margin="21,186,221,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Caminho para executavel (.exe)" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblCaminhoAtalho" Content="Caminho do Atalho" Margin="22,159,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxParamAtalho" Margin="21,261,221,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Parametros (opcional)" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblParamAtalho" Content="Parametro do Atalho" Margin="22,234,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxImgAtalho" Margin="21,336,21,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Imagem de exibição" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblImgAtalho" Content="Imagem do Atalho" Margin="21,308,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxIconAtalho" Margin="21,411,21,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Imagem de exibição" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblIconAtalho" Content="Icone do Atalho" Margin="21,383,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Button x:Name="btnIconAtalhoOnline" Content="Pesquisar online" HorizontalAlignment="Left" Margin="571,420,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnImgAtalhoOnline" Content="Pesquisar online" HorizontalAlignment="Left" Margin="571,345,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnIconAtalhoLocal" Content="Procurar" HorizontalAlignment="Left" Margin="464,419,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnImgAtalhoLocal" Content="Procurar" HorizontalAlignment="Left" Margin="464,345,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnCancelarAtalho" Content="Cancelar" HorizontalAlignment="Left" Margin="529,631,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="43" Width="144"/>
            <Button x:Name="btnSalvarAtalho" Content="Salvar" HorizontalAlignment="Left" Margin="380,631,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="43" Width="144"/>
            <Button x:Name="btnImportarAtalho" Content="Importar Atalho" HorizontalAlignment="Left" Margin="380,583,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="43" Width="293"/>
            <Image x:Name="picImgAtalho" Panel.ZIndex="4" Margin="22,480,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="193" MaxWidth="344" SizeChanged="picImgAtalho_SizeChanged" />
            <Rectangle x:Name="recPicImgAtalho" HorizontalAlignment="Left" Height="193" Margin="22,481,0,0" Stroke="#FF3A3A3A" VerticalAlignment="Top" Width="344" Fill="#FF3A3A3A"/>
            <Image x:Name="picIconAtalho" HorizontalAlignment="Left" Margin="478,118,0,0" VerticalAlignment="Top" Panel.ZIndex="4" MaxWidth="195" MaxHeight="195" SizeChanged="picIconAtalho_SizeChanged" />
            <Rectangle x:Name="recPicIconAtalho" HorizontalAlignment="Left" Height="195" Margin="478,118,0,0" Stroke="#FF3A3A3A" VerticalAlignment="Top" Width="195" Fill="#FF3A3A3A"/>
            <Button x:Name="btnExeAtalhoLocal" Content="Procurar" HorizontalAlignment="Left" Margin="371,195,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
        </Grid>
        <Grid x:Name="gdPage2" Visibility="Collapsed">
            <Controles:TextboxCustom x:Name="txtbxNomeApp" Margin="21,110,21,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblNomeApp" Content="Nome do Aplicativo" Margin="22,83,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxCaminhoApp" Margin="21,186,21,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="URL, URI ou caminho do EXE para abrir o aplicativo" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblCaminhoApp" Content="Caminho do Aplicativo" Margin="22,159,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:TextboxCustom x:Name="txtbxIconApp" Margin="21,261,21,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Icone" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblIconApp" Content="Icone do Aplicativo" Margin="22,234,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Button x:Name="btnIconAppOnline" Content="Pesquisar online" HorizontalAlignment="Left" Margin="571,269,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnIconAppLocal" Content="Procurar" HorizontalAlignment="Left" Margin="464,269,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
            <Button x:Name="btnCancelarApp" Content="Cancelar" HorizontalAlignment="Left" Margin="529,631,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="43" Width="144"/>
            <Button x:Name="btnSalvarApp" Content="Salvar" HorizontalAlignment="Left" Margin="380,631,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="43" Width="144"/>
            <Image x:Name="picIconApp" Margin="22,330,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" MaxHeight="344" MaxWidth="344" SizeChanged="picImgAtalho_SizeChanged" Panel.ZIndex="4" />
            <Rectangle x:Name="recPicIconApp" HorizontalAlignment="Left" Height="344" Margin="22,330,0,0" Stroke="#FF3A3A3A" VerticalAlignment="Top" Width="344" Fill="#FF3A3A3A"/>
            <Button x:Name="btnExeAppLocal" Content="Procurar" HorizontalAlignment="Left" Margin="571,195,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="#FF3B3A3A" Height="43" Width="102"/>
        </Grid>
    </Grid>
</UserControl>
