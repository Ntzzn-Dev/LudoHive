<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas"
             xmlns:Controles="clr-namespace:LudoHive.Telas.Controles" x:Class="LudoHive.Telas.Configurar"
             mc:Ignorable="d" d:DesignWidth="694" HorizontalAlignment="Left" VerticalAlignment="Top" Width="694" Height="377">
    <Grid Background="#FF2C2C2C">
        <Rectangle Height="49" Stroke="#FF151617" VerticalAlignment="Top" Fill="#FF151617"/>
        <Label x:Name="lblNomeAtalho_Copiar" Content="LudoHive - Configurações" Margin="10,6,0,0" VerticalAlignment="Top" Foreground="Silver" FontSize="25" HorizontalAlignment="Left" FontFamily="Segoe UI Black"/>
        <Rectangle Stroke="#FF1B1C1D" Fill="#FF1B1C1D" Margin="0,49,0,0" Height="34" VerticalAlignment="Top"/>
        <Button x:Name="btnPageAtalho" Content="Atalho" HorizontalAlignment="Left" Margin="22,51,0,0" VerticalAlignment="Top" Background="#FF2C2C2C" BorderBrush="#FF2C2C2C" Height="30" Width="102" Foreground="Silver">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>
        <Button x:Name="btnPageApp" Content="Aplicativo" HorizontalAlignment="Left" Margin="140,51,0,0" VerticalAlignment="Top" Background="#FF2C2C2C" BorderBrush="#FF2C2C2C" Height="30" Width="102" Foreground="Silver">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Grid x:Name="gdPage1">
            <Controles:TextboxCustom x:Name="txtbxNavegadorPadrao" Margin="21,110,221,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Caminho para o navegador que será aberto ao pesquisar online" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblNavegadorPadrao" Content="Navegador Padrão" Margin="22,83,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Button x:Name="btnCancelarConfig" Content="Cancelar" HorizontalAlignment="Left" Margin="528,318,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="144"/>
            <Button x:Name="btnSalvarConfig" Content="Salvar" HorizontalAlignment="Left" Margin="379,318,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="144"/>
            <Button x:Name="btnRedefinirConfig" Content="Redefinir Configurações" HorizontalAlignment="Left" Margin="379,270,0,0" VerticalAlignment="Top" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="293"/>
            <Controles:ImgOnline x:Name="picOnImgAtalho" HorizontalAlignment="Left" Margin="22,174,0,0" VerticalAlignment="Top" Url="" TamanhoImg="344,193" CorFundo="#FF3A3A3A"/>
            <Controles:ToggleButton x:Name="tgbtnFecharDpsPesquisa" HorizontalAlignment="Left" Margin="495,118,0,0" VerticalAlignment="Top" Height="44" Width="177" RenderTransformOrigin="0.5,0.5" CorCirculo="#FF7B7B7B" CorBorda="#FF373737" Arredondamento="12" Bordas="5" CorFundoFalse="#FF565050" CorFundoTrue="#FF545650"/>
            <Label x:Name="lblFecharNavegador" Content="Fechar após pesquisa" Margin="0,85,6,0" VerticalAlignment="Top" Foreground="#FF6D6D6D" FontWeight="Bold" HorizontalAlignment="Right" FontSize="20"/>
        </Grid>
    </Grid>
</UserControl>
