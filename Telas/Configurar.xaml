<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LudoHive.Telas"
             xmlns:Controles="clr-namespace:LudoHive.Telas.Controles" x:Class="LudoHive.Telas.Configurar"
             mc:Ignorable="d" d:DesignWidth="694" HorizontalAlignment="Left" VerticalAlignment="Top" Width="694" Height="782">
    <Grid Background="#FF2C2C2C">
        <Rectangle Height="49" Stroke="#FF151617" VerticalAlignment="Top" Fill="#FF151617"/>
        <Label x:Name="lblNomeAtalho_Copiar" Content="LudoHive - Configurações" Margin="10,6,0,0" VerticalAlignment="Top" Foreground="Silver" FontSize="25" HorizontalAlignment="Left" FontFamily="Segoe UI Black"/>
        <Rectangle Stroke="#FF1B1C1D" Fill="#FF1B1C1D" Margin="0,49,0,0" Height="34" VerticalAlignment="Top"/>
        <Button x:Name="btnPageAtalho" Content="Geral" HorizontalAlignment="Left" Margin="22,51,0,0" VerticalAlignment="Top" Background="#FF2C2C2C" BorderBrush="#FF2C2C2C" Height="30" Width="102" Foreground="Silver">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="BorderBrush" Value="Transparent"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Button.Style>
        </Button>

        <Grid x:Name="gdPage1">
            <Controles:TextboxCustom x:Name="txtbxNavegadorPadrao" Margin="21,110,221,0" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="14" Placeholder="Caminho para o navegador que será aberto ao pesquisar online" Height="52" VerticalAlignment="Top"/>
            <Label x:Name="lblNavegadorPadrao" Content="Navegador Padrão" Margin="22,83,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Button x:Name="btnCancelarConfig" Content="Cancelar" HorizontalAlignment="Right" Margin="0,0,22,15" VerticalAlignment="Bottom" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="144"/>
            <Button x:Name="btnSalvarConfig" Content="Salvar" HorizontalAlignment="Right" Margin="0,0,171,15" VerticalAlignment="Bottom" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="144"/>
            <Button x:Name="btnRedefinirConfig" Content="Redefinir Configurações" HorizontalAlignment="Right" Margin="0,0,22,63" VerticalAlignment="Bottom" Background="#FF3B3A3A" BorderBrush="Black" Height="44" Width="293"/>
            <Controles:ToggleButton x:Name="tgbtnFecharDpsPesquisa" HorizontalAlignment="Left" Margin="495,118,0,0" VerticalAlignment="Top" Height="44" Width="177" RenderTransformOrigin="0.5,0.5" CorCirculo="#FF7B7B7B" CorBorda="#FF373737" Arredondamento="12" Bordas="5" CorFundoFalse="#FF565050" CorFundoTrue="#FF545650"/>
            <Label x:Name="lblFecharNavegador" Content="Fechar após pesquisa" Margin="0,85,6,0" VerticalAlignment="Top" Foreground="#FF6D6D6D" FontWeight="Bold" HorizontalAlignment="Right" FontSize="20"/>
            <Controles:Ordenar x:Name="ordAtalhosExibicao" HorizontalAlignment="Left" Margin="22,180,0,0" VerticalAlignment="Top" Height="376" Width="320" CorBackground="#FF272727" CorTitulo="#FF1D1D1D" CorTextoTitulo="Silver" CorLabels="#FF272727" Titulo="Atalhos"/>
            <Controles:Ordenar x:Name="ordPastas" HorizontalAlignment="Left" Margin="352,180,0,0" VerticalAlignment="Top" Height="376" Width="320" Titulo="Pastas" CorBackground="#FF272727" CorTitulo="#FF1D1D1D" CorTextoTitulo="Silver" Foreground="Black" CorLabels="#FF272727" CanDelete="True" CanEdit="True"/>
            <Controles:ToggleButton x:Name="tgbtnAdicionarAtalhos" HorizontalAlignment="Left" Margin="283,182,0,0" VerticalAlignment="Top" Height="29" Width="57" CorBorda="#FF383838" CorCirculo="#FF7D7D7D" Bordas="2" Arredondamento="4"/>
            <Label Content="Adicionar" HorizontalAlignment="Left" Margin="205,181,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="16"/>
            <Button x:Name="btnAddPasta" Content="Adicionar" HorizontalAlignment="Left" Margin="631,180,0,0" VerticalAlignment="Top" Width="41" Height="34"/>
            <Controles:TextboxCustom x:Name="txtbxNomePasta" HorizontalAlignment="Left" Margin="425,172,0,0" VerticalAlignment="Top" Height="40" Width="206" CorBackground="#FF3B3A3A" CorForeground="Black" CorPlaceholder="DimGray" Fontsize="13" Placeholder="Nome da Pasta" MaxHeight="42" Visibility="Collapsed"/>
            <Label x:Name="lblMonitorPadrao" Content="Monitor Padrão" Margin="22,547,0,0" VerticalAlignment="Top" Foreground="Silver" FontWeight="Bold" FontSize="25" HorizontalAlignment="Left"/>
            <Controles:StateButton x:Name="sttbtnMonitor" HorizontalAlignment="Left" Margin="22,584,0,0" VerticalAlignment="Top" Width="320" Arredondamento="11" CorBtn="#FF3B3A3A"/>
            <Button x:Name="btnTabelaJogos" Content="Mostrar Tabela de Jogos" Margin="22,0,0,15" VerticalAlignment="Bottom" Background="#FF3B3A3A" BorderBrush="Black" Height="44" HorizontalAlignment="Left" Width="293"/>
        </Grid>
    </Grid>
</UserControl>
